import javax.swing.*;
import java.awt.event.*;
import java.awt.*;

public class Screen extends JFrame{
	private JPanel panel=new JPanel();
	private JFrame screen=new JFrame();
	
	public Screen(){
		super("first");
		
		JPanel CandlePanel=new JPanel();
		CandlePanel.add((new Draw()).Price_Chart());
		CandlePanel.setLayout(new BoxLayout(CandlePanel, BoxLayout.Y_AXIS));
		
		panel.setBackground(Color.black);
		panel.setLayout(new FlowLayout(FlowLayout.LEFT, 20, 20));;
		panel.add(CandlePanel).setLocation(1, 1);
		
		panel.add(new JTextField(null,20)).setLocation(2, 1);
		
		
		
		
		this.setContentPane(panel);
	}

}
