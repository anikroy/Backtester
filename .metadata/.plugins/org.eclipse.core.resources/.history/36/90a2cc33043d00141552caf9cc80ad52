import java.awt.event.*;
import javax.swing.*;
import java.awt.*;

public class Screen extends JFrame{
	private JPanel panel=new JPanel(),
			       LogPanel=new JPanel(),
			       LogPanel2=new JPanel(),
			       CandlePanel=new JPanel();
	
	public Screen(){
		super("first");
		
		LogPanel.add((new Logs()).Trade_Log()); LogPanel2.add((new Logs()).Trade());
		
		CandlePanel.add((new Draw()).Price_Chart());
		CandlePanel.setLayout(new BoxLayout(CandlePanel, BoxLayout.Y_AXIS));
		
		panel.setBackground(Color.black);
		panel.setLayout(new GridLayout(2,2));
		
		
		panel.add(CandlePanel).setLocation(0,0);
		panel.add(LogPanel2).setLocation(1,1);
		panel.add(LogPanel).setLocation(1,0);
		
		this.setContentPane(panel);
	}
	
}
